<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/micromovie_theme_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/micromovie_dotview_right_margin"
        android:layout_gravity="center_vertical"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/micromovie_marginside">
        <ImageView
            android:id="@+id/micromovie_theme_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"/>
        <TextView
            android:id="@+id/micromovie_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/micromovie_theme_pic"
            android:layout_alignEnd="@id/micromovie_theme_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/micromovie_text_paddingbottom"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
